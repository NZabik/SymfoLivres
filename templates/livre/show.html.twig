{% extends 'base.html.twig' %}

{% block title %}Livre{% endblock %}

{% block body %}
   <div class="container">
    <h1>Livre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ livre.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ livre.nom }}</td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td>{{ livre.auteur.nom }}</td>
            </tr>
            <tr>
                <th>Editeur</th>
                <td>{{ livre.editeur.nom }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ livre.createdAt ? livre.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Couverture</th>
                <td><img class="img-fluid" width="100px" src="{{asset('/uploads/couvertures/'~ livre.couverture)  }}"/></td>
            </tr>
            <tr>
                <th>Résumé</th>
                <td>{{ livre.resume }}</td>
            </tr>
            <tr>
                <th>Location</th>
                {% if livre.user is null %}
						<td>Livre non loué</td>
						{% else %}
						<td>{{ livre.user.nom }} {{ livre.user.prenom }}</td>
						{% endif %}
                
            </tr>
             
        </tbody>
    </table>

    <a href="{{ path('app_livre_index') }}">back to list</a>

    <a href="{{ path('app_livre_edit', {'id': livre.id}) }}">edit</a>

    {{ include('livre/_delete_form.html.twig') }}
    </div>
{% endblock %}
